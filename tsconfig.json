{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "dist/js",
    "rootDir": "src/ts",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "strict": true,
    "noImplicitAny": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/ts/**/*"]
}
